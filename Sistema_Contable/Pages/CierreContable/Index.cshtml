@page
@model Sistema_Contable.Pages.CierreContable.IndexModel
@{
    ViewData["Title"] = "Cierre Contable";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-balance-scale text-primary"></i> Cierre Contable (ADM14)
    </h1>

    <!-- Botón estilo "Nuevo Usuario" (mismo look), aquí solo ejecuta submit del form -->
    <button type="button" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
            onclick="document.getElementById('formCierre').requestSubmit();">
        <i class="fas fa-play fa-sm text-white-50"></i> Ejecutar Cierre
    </button>
</div>

<!-- Token antifalsificación (mismo patrón que Usuarios) -->
<form id="tokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Ejecutar cierre mensual</h6>

        <!-- Buscador estilo input-group como en otras pantallas -->
        <small class="text-muted d-none d-md-inline">
            Seleccione el periodo que desea cerrar (solo permitirá cerrar si no hay anteriores abiertos).
        </small>
    </div>

    <div class="card-body">
        <form method="post" asp-page-handler="Ejecutar" id="formCierre">
            @Html.AntiForgeryToken()

            <div class="row align-items-end">
                <div class="col-md-8 mb-3">
                    <label class="font-weight-bold">Periodo (Año/Mes) <span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="PeriodoId" required>
                        <option value="">-- Seleccione --</option>
                        @foreach (var p in Model.Periodos)
                        {
                            <option value="@p.periodo_id">
                                @p.anio / @p.mes (@p.estado)
                            </option>
                        }
                    </select>
                    <small class="form-text text-muted">
                        Solo se puede cerrar si no existen periodos anteriores abiertos.
                    </small>
                </div>

                <div class="col-md-4 mb-3 text-right">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="fas fa-play"></i> Ejecutar Cierre
                    </button>
                </div>
            </div>
        </form>

        @if (Model.Resultado != null)
        {
            <hr class="my-4" />

            <div class="d-sm-flex align-items-center justify-content-between mb-3">
                <div>
                    <h5 class="mb-0 text-gray-800">
                        Resultado del cierre: <strong>@Model.Resultado.Anio / @Model.Resultado.Mes</strong>
                    </h5>
                    <small class="text-muted">Demostración de igualdad Debe vs Haber según naturaleza.</small>
                </div>

                <div class="mt-3 mt-sm-0">
                    @if (Model.Resultado.Balanceado)
                    {
                        <span class="badge badge-success p-2">
                            <i class="fas fa-check"></i> Balanceado
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-danger p-2">
                            <i class="fas fa-times"></i> No balanceado
                        </span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-2 mb-md-0">
                    <div class="alert alert-light border mb-0">
                        <strong>Debe:</strong> @Model.Resultado.TotalDebe.ToString("0.00")
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-light border mb-0">
                        <strong>Haber:</strong> @Model.Resultado.TotalHaber.ToString("0.00")
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Cuenta</th>
                            <th>Naturaleza</th>
                            <th class="text-right">Saldo Anterior</th>
                            <th class="text-right">Mov. Debe</th>
                            <th class="text-right">Mov. Haber</th>
                            <th class="text-right">Saldo Nuevo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Resultado.Lineas == null || !Model.Resultado.Lineas.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                    <p class="mb-0">No hay movimientos para mostrar</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var l in Model.Resultado.Lineas)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-primary">@l.CodigoCuenta</span>
                                        <span class="ml-2">@l.NombreCuenta</span>
                                    </td>
                                    <td>
                                        <span class="badge @(l.TipoSaldo == "deudor" ? "badge-info" : "badge-warning")">
                                            @l.TipoSaldo
                                        </span>
                                    </td>
                                    <td class="text-right">@l.SaldoAnterior.ToString("0.00")</td>
                                    <td class="text-right">@l.MovDebe.ToString("0.00")</td>
                                    <td class="text-right">@l.MovHaber.ToString("0.00")</td>
                                    <td class="text-right font-weight-bold">@l.SaldoNuevo.ToString("0.00")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (!string.IsNullOrEmpty(Model.MensajeExito))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-success text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-check-circle"></i> Éxito
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.MensajeExito
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () {
                        $(this).remove();
                    });
                    </text>
            }

            @if (!string.IsNullOrEmpty(Model.MensajeError))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-exclamation-triangle"></i> Error
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.MensajeError
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () {
                        $(this).remove();
                    });
                    </text>
            }
        });
    </script>
}

