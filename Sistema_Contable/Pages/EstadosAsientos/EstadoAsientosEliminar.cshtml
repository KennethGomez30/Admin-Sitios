@page
@model Sistema_Contable.Pages.EstadosAsientos.EstadoAsientosEliminarModel
@{
    ViewData["Title"] = "Eliminar Estado";
}

<h1 class="h3 mb-4 text-gray-800">Eliminar Estado</h1>

@if (Model.Estado == null)
{
    <a asp-page="./EstadoAsientos" class="btn btn-secondary">Volver</a>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                ¿Seguro que deseas eliminar el estado
                <strong>@Model.Estado.Codigo</strong> - @Model.Estado.Nombre?
            </div>

            <form method="post">
                <input type="hidden" name="codigo" value="@Model.Estado.Codigo" />

                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sí, eliminar
                </button>
                <a asp-page="./EstadoAsientos" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
}
