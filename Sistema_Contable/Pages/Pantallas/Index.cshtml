@page
@model Sistema_Contable.Pages.Pantallas.IndexModel
@{
    ViewData["Title"] = "Administrador de Pantallas";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-desktop text-primary"></i> Administrador de Pantallas
    </h1>
    <a asp-page="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Nueva Pantalla
    </a>
</div>

<!-- Token antifalsificación para el formulario de eliminación (igual que Usuarios) -->
<form id="tokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Pantallas</h6>

        <form method="get" class="form-inline mt-3 mt-md-0">
            <div class="input-group">
                <input class="form-control"
                       type="text"
                       name="q"
                       value="@Model.q"
                       placeholder="Buscar por nombre o ruta..." />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" title="Buscar">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Ruta</th>
                        <th>Estado</th>
                        <th class="text-nowrap">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Pantallas == null || Model.Pantallas.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p class="mb-0">No hay registros.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model.Pantallas)
                        {
                            <tr>
                                <td>@p.nombre</td>
                                <td>@p.descripcion</td>

                                <!-- Ruta como badge azul (igual a como querías) -->
                                <td class="text-nowrap">
                                    <span class="badge badge-primary">@p.ruta</span>
                                </td>

                                <td>
                                    @if (p.estado == "Activa")
                                    {
                                        <span class="badge badge-primary">@p.estado</span>
                                    }
                                    else if (p.estado == "Inactiva")
                                    {
                                        <span class="badge badge-secondary">@p.estado</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-light">@p.estado</span>
                                    }
                                </td>

                                <td class="text-nowrap">
                                    <a asp-page="Edit" asp-route-id="@p.pantalla_id"
                                       class="btn btn-sm btn-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <!-- Igual UX que Usuarios: confirmación por JS -->
                                    <button type="button" class="btn btn-sm btn-danger"
                                            onclick="confirmarEliminacion('@p.pantalla_id', '@p.nombre')"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.page <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="./Index"
                           asp-route-page="@(Model.page - 1)"
                           asp-route-q="@Model.q">
                            Anterior
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.page ? "active" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-page="@i"
                               asp-route-q="@Model.q">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(Model.page >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="./Index"
                           asp-route-page="@(Model.page + 1)"
                           asp-route-q="@Model.q">
                            Siguiente
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Modal Éxito (igual que Usuarios)
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-success text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-check-circle"></i> Éxito
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.SuccessMessage
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () { $(this).remove(); });
                    </text>
            }

            // Modal Error (igual que Usuarios)
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-exclamation-triangle"></i> Error
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.ErrorMessage
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () { $(this).remove(); });
                    </text>
            }

        });

        function confirmarEliminacion(idPantalla, nombrePantalla) {
            var modalHtml = `
                <div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                                </h5>
                                <button type="button" class="close text-white" data-dismiss="modal">
                                    <span>&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>¿Realmente desea eliminar el elemento seleccionado?</p>
                                <p><strong>Pantalla:</strong> ${nombrePantalla}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <button type="button" class="btn btn-danger" onclick="eliminarPantalla('${idPantalla}')">Sí</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('#modalEliminar').remove();
            $('body').append(modalHtml);
            $('#modalEliminar').modal('show');
        }

        function eliminarPantalla(idPantalla) {
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '?handler=Delete';

            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'id';
            input.value = idPantalla;
            form.appendChild(input);

            var token = document.createElement('input');
            token.type = 'hidden';
            token.name = '__RequestVerificationToken';
            token.value = $('input[name="__RequestVerificationToken"]').val();
            form.appendChild(token);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}
