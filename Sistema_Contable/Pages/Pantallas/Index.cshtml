@page
@model Sistema_Contable.Pages.Pantallas.IndexModel
@{
    ViewData["Title"] = "Administrador de Pantallas";
}

<h3 class="mb-3">Administrador de Pantallas</h3>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <form method="get" class="d-flex gap-2">
        <input class="form-control" type="text" name="q" value="@Model.q" placeholder="Buscar por nombre o ruta..." />
        <button class="btn btn-outline-primary" type="submit">Buscar</button>
    </form>

    <a class="btn btn-primary" asp-page="Create">Nuevo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Ruta</th>
                <th>Estado</th>
                <th style="width:160px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Pantallas.Count == 0)
            {
                <tr><td colspan="5" class="text-center">No hay registros.</td></tr>
            }
            else
            {
                foreach (var p in Model.Pantallas)
                {
                    <tr>
                        <td>@p.nombre</td>
                        <td>@p.descripcion</td>
                        <td>@p.ruta</td>
                        <td>@p.estado</td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@p.pantalla_id">Editar</a>

                            <!-- Bootstrap 4 (SB Admin 2): data-toggle / data-target -->
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-toggle="modal"
                                    data-target="#deleteModal"
                                    data-id="@p.pantalla_id"
                                    data-nombre="@p.nombre">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.page <= 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.page - 1)" asp-route-q="@Model.q">Anterior</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.page ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-page="@i" asp-route-q="@Model.q">@i</a>
                </li>
            }

            <li class="page-item @(Model.page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Index" asp-route-page="@(Model.page + 1)" asp-route-q="@Model.q">Siguiente</a>
            </li>
        </ul>
    </nav>
}

<!-- Modal confirmación (Bootstrap 4) -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <!-- Bootstrap 4: close + data-dismiss -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea eliminar la pantalla <strong id="deleteNombre"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                <form method="post" asp-page-handler="Delete" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap 4 + jQuery: show.bs.modal
        $('#deleteModal').on('show.bs.modal', function (event) {
            var btn = $(event.relatedTarget);
            $('#deleteId').val(btn.data('id'));
            $('#deleteNombre').text(btn.data('nombre'));
        });
    </script>
}
