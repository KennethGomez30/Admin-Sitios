@page
@model Sistema_Contable.Pages.Pantallas.IndexModel
@{
    ViewData["Title"] = "Administrador de Pantallas";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-desktop text-primary"></i> Administrador de Pantallas
    </h1>

    <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" asp-page="Create">
        <i class="fas fa-plus fa-sm text-white-50"></i> Nueva Pantalla
    </a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Pantallas</h6>

        <form method="get" class="form-inline mt-3 mt-md-0">
            <div class="input-group">
                <input class="form-control"
                       type="text"
                       name="q"
                       value="@Model.q"
                       placeholder="Buscar por nombre o ruta..." />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Ruta</th>
                        <th>Estado</th>
                        <th class="text-nowrap">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Pantallas == null || Model.Pantallas.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p class="mb-0">No hay registros.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model.Pantallas)
                        {
                            <tr>
                                <td>@p.nombre</td>
                                <td>@p.descripcion</td>

                                <!-- CAMBIO: Ruta como badge azul -->
                                <td class="text-nowrap">
                                    <span class="badge badge-primary">@p.ruta</span>
                                </td>

                                <td>
                                    @if (p.estado == "Activa")
                                    {
                                        <span class="badge badge-primary">@p.estado</span>
                                    }
                                    else if (p.estado == "Inactiva")
                                    {
                                        <span class="badge badge-secondary">@p.estado</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-light">@p.estado</span>
                                    }
                                </td>
                                <td class="text-nowrap">
                                    <a class="btn btn-sm btn-primary"
                                       asp-page="Edit"
                                       asp-route-id="@p.pantalla_id"
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-sm btn-danger"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@p.pantalla_id"
                                            data-nombre="@p.nombre"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.page <= 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="./Index"
                           asp-route-page="@(Model.page - 1)"
                           asp-route-q="@Model.q">
                            Anterior
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.page ? "active" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-page="@i"
                               asp-route-q="@Model.q">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(Model.page >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-page="./Index"
                           asp-route-page="@(Model.page + 1)"
                           asp-route-q="@Model.q">
                            Siguiente
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Modal confirmación (Bootstrap 4) -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar eliminación
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Realmente desea eliminar el elemento seleccionado?</p>
                <p><strong>Pantalla:</strong> <span id="deleteNombre"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>

                <form method="post" asp-page-handler="Delete" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Sí</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap 4 + jQuery: show.bs.modal
        $('#deleteModal').on('show.bs.modal', function (event) {
            var btn = $(event.relatedTarget);
            $('#deleteId').val(btn.data('id'));
            $('#deleteNombre').text(btn.data('nombre'));
        });
    </script>
}