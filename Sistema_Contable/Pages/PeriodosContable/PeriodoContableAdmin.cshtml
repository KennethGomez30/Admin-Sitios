@page
@model Sistema_Contable.Pages.PeriodosContable.PeriodoContableAdminModel
@{
    ViewData["Title"] = "Períodos Contables";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Períodos Contables</h1>

    <a asp-page="./PeriodoContableCrear" class="btn btn-primary btn-sm shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Añadir
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listado</h6>

        <!-- Filtro por estado -->
        <form method="get" class="form-inline">
            <label class="mr-2 font-weight-bold">Estado:</label>
            <select name="Estado" class="form-control form-control-sm mr-2">
                <option value="" selected="@(string.IsNullOrWhiteSpace(Model.Estado))">Todos</option>
                <option value="Abierto" selected="@(Model.Estado == "ABIERTO")">Abierto</option>
                <option value="Cerrado" selected="@(Model.Estado == "CERRADO")">Cerrado</option>
            </select>
            <button class="btn btn-sm btn-secondary" type="submit">
                <i class="fas fa-filter"></i> Filtrar
            </button>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Año</th>
                        <th>Mes</th>
                        <th>Estado</th>
                        <th>Activo</th>
                        <th>Usuario cierre</th>
                        <th>Fecha cierre</th>
                        <th style="width:280px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Periodos)
                    {
                        <tr>
                            <td>@p.Anio</td>
                            <td>@p.Mes.ToString("D2")</td>
                            <td>
                                @if (p.Estado == "ABIERTO")
                                {
                                    <span class="badge badge-success">Abierto</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Cerrado</span>
                                }
                            </td>
                            <td>
                                @if (p.Activo)
                                {
                                    <span class="badge badge-primary">Sí</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No</span>
                                }
                            </td>
                            <td>@(p.UsuarioCierre ?? "-")</td>
                            <td>@(p.FechaCierre?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>

                            <td class="text-center">

                               
                                    <a asp-page="./PeriodoContableEditar"
                                       asp-route-id="@p.PeriodoId"
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>


                                <button type="button"
                                        class="btn btn-danger btn-sm ml-1 btn-eliminar"
                                        data-toggle="modal"
                                        data-target="#modalEliminar"
                                        data-id="@p.PeriodoId"
                                        data-texto="@($"{p.Anio}-{p.Mes:D2}")">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>

                                <!-- Cerrar / Abrir -->
                                @if (p.Estado == "ABIERTO")
                                {
                                    <button type="button"
                                            class="btn btn-dark btn-sm ml-1 btn-accion-periodo"
                                            data-id="@p.PeriodoId"
                                            data-accion="Cerrar"
                                            data-texto="@($"{p.Anio}-{p.Mes:D2}")">
                                        <i class="fas fa-lock"></i> Cerrar
                                    </button>
                                }
                                else
                                {
                                    <button type="button"
                                            class="btn btn-info btn-sm ml-1 btn-accion-periodo"
                                            data-id="@p.PeriodoId"
                                            data-accion="Abrir"
                                            data-texto="@($"{p.Anio}-{p.Mes:D2}")">
                                        <i class="fas fa-unlock"></i> Abrir
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal Eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                @if (Model.MostrarModalEliminar && !string.IsNullOrWhiteSpace(Model.MensajeModalEliminar))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        @Model.MensajeModalEliminar
                    </div>
                }

                <p class="mb-0">
                    ¿Seguro que deseas eliminar el período <strong id="periodoTexto"></strong>?
                </p>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                <form method="post" asp-page-handler="Eliminar">
                    <input type="hidden" id="idEliminar" name="idEliminar" />
                    <input type="hidden" name="estado" value="@Model.Estado" />

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sí, eliminar
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- Modal Cerrar/Abrir -->
<div class="modal fade" id="modalAccionPeriodo" tabindex="-1" role="dialog" aria-labelledby="modalAccionPeriodoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="modalAccionPeriodoLabel">Confirmar acción</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p class="mb-0" id="textoAccionPeriodo"></p>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                <form method="post" asp-page-handler="AccionPeriodo">
                    <input type="hidden" id="periodoIdAccion" name="periodoId" />
                    <input type="hidden" id="accionPeriodoHidden" name="accion" />
                    <input type="hidden" name="estado" value="@Model.Estado" />
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(function () {


            if ($.fn.DataTable) {
                $('#dataTable').DataTable({
                    ordering: false
                });
            }


            $('.btn-eliminar').on('click', function () {
                var id = $(this).data('id');
                var texto = $(this).data('texto');

                $('#idEliminar').val(id);
                $('#periodoTexto').text(texto);
            });

            var mostrar = '@Model.MostrarModalEliminar'.toLowerCase() === 'true';
            if (mostrar) {
                var id = '@Model.PeriodoIdModal';
                var texto = '@(Model.PeriodoTextoModal ?? "")';

                if (id) $('#idEliminar').val(id);
                if (texto) $('#periodoTexto').text(texto);

                $('#modalEliminar').modal('show');
            }
            $(document).on('click', '.btn-accion-periodo', function () {
                var id = $(this).data('id');
                var accion = $(this).data('accion'); // Cerrar / Abrir
                var texto = $(this).data('texto');

                $('#periodoIdAccion').val(id);
                $('#accionPeriodoHidden').val(accion);

                if (accion === 'Cerrar') {
                    $('#modalAccionPeriodoLabel').text('Confirmar cierre');
                    $('#textoAccionPeriodo').text('¿Seguro que deseas cerrar el período ' + texto + '?');
                } else {
                    $('#modalAccionPeriodoLabel').text('Confirmar apertura');
                    $('#textoAccionPeriodo').text('¿Seguro que deseas abrir el período ' + texto + '?');
                }

                $('#modalAccionPeriodo').modal('show');
            });

        });

    </script>
}
