@page
@model Sistema_Contable.Pages.PeriodosContable.PeriodosContableCrearModel
@{
    ViewData["Title"] = "Crear Período Contable";
}

<h1 class="h3 mb-4 text-gray-800">Crear Período Contable</h1>

<div class="card shadow mb-4">
    <div class="card-body">

        <form method="post">
            <div class="form-group">
                <label>Año</label>
                <select class="form-control" asp-for="Anio" asp-items="Model.Anios"></select>
            </div>

            <div class="form-group">
                <label>Mes</label>
                <select class="form-control" asp-for="Mes" asp-items="Model.Meses"></select>
            </div>

            <div class="form-group">
                <label>Estado</label>
                <input class="form-control" value="Abierto" readonly />
                <small class="form-text text-muted">
                    El período se crea como <strong>Abierto</strong>. Para cerrar/abrir use los botones del listado.
                </small>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>

            <a asp-page="./PeriodoContableAdmin" class="btn btn-secondary">Cancelar</a>
        </form>

    </div>
</div>
