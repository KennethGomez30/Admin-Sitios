@page
@model Sistema_Contable.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Administración de Roles";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-user-shield text-primary"></i> Administración de Roles
    </h1>
    <a asp-page="./Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Nuevo Rol
    </a>
</div>

<!-- Token antifalsificación para el formulario de eliminación -->
<form id="tokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Roles</h6>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th style="width:120px;">ID Rol</th>
                        <th>Nombre</th>
                        <th style="width:160px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Roles == null || !Model.Roles.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>No hay roles registrados</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var rol in Model.Roles)
                        {
                            <tr>
                                <td>@rol.IdRol</td>
                                <td>@rol.Nombre</td>
                                <td class="text-nowrap">
                                    <a asp-page="./Edit" asp-route-id="@rol.IdRol"
                                       class="btn btn-sm btn-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-danger"
                                            onclick="confirmarEliminacion('@rol.IdRol', '@rol.Nombre')"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPaginas > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual - 1)">Anterior</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPaginas; i++)
                    {
                        <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pagina="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (!string.IsNullOrEmpty(Model.MensajeExito))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-success text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-check-circle"></i> Éxito
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.MensajeExito
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () {
                        $(this).remove();
                    });
                    </text>
            }

            @if (!string.IsNullOrEmpty(Model.MensajeError))
            {
                    <text>
                    var modalHtml = `
                        <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">
                                            <i class="fas fa-exclamation-triangle"></i> Error
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @Model.MensajeError
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    $('body').append(modalHtml);
                    $('#modalMensaje').modal('show');
                    $('#modalMensaje').on('hidden.bs.modal', function () {
                        $(this).remove();
                    });
                    </text>
            }
        });

        function confirmarEliminacion(idRol, nombre) {
            var modalHtml = `
                <div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                                </h5>
                                <button type="button" class="close text-white" data-dismiss="modal">
                                    <span>&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>¿Realmente desea eliminar el elemento seleccionado?</p>
                                <p><strong>Rol:</strong> ${nombre}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <button type="button" class="btn btn-danger" onclick="eliminarRol('${idRol}')">Sí</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('#modalEliminar').remove();
            $('body').append(modalHtml);
            $('#modalEliminar').modal('show');
        }

        function eliminarRol(idRol) {
            var form = document.createElement('form');
            form.method = 'POST';

            //asegurar que postea al path actual (más robusto con querystrings)
            form.action = window.location.pathname + '?handler=Eliminar';

            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'idRolEliminar';
            input.value = idRol;
            form.appendChild(input);

            var token = document.createElement('input');
            token.type = 'hidden';
            token.name = '__RequestVerificationToken';

            //  tomar el token SOLO del form tokenForm
            token.value = $('#tokenForm input[name="__RequestVerificationToken"]').val();

            form.appendChild(token);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}
