@page "{id}"
@model Sistema_Contable.Pages.Usuarios.CambiarClaveModel
@{
    ViewData["Title"] = "Cambio de clave";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-key text-primary"></i> Cambio de clave
    </h1>
    <a asp-page="./Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver al Listado
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @Model.MensajeError
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.MensajeExito))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.MensajeExito
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-user"></i> Usuario: @Model.Usuario?.NombreCompleto
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-light border">
                    <i class="fas fa-info-circle text-primary"></i>
                    <strong>Identificación:</strong> @Model.Usuario?.Identificacion
                </div>

                <form method="post">
                    <div class="form-group">
                        <label for="nuevaContrasena" class="font-weight-bold">
                            Nueva Contraseña <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input asp-for="NuevaContrasena" type="text" class="form-control form-control-lg"
                                   id="nuevaContrasena" placeholder="Ingrese la nueva contraseña" required />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-primary" onclick="autogenerarContrasena()">
                                    Autogenerar
                                </button>
                            </div>
                        </div>
                        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Puede escribir una contraseña manualmente o usar el botón "Autogenerar"
                        </small>
                    </div>

                    <hr class="my-4">

                    <div class="form-group text-right mb-0">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i> Aceptar
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow border-left-primary">
            <div class="card-body">
                <h6 class="text-primary font-weight-bold">
                    Requisitos de Contraseña
                </h6>
                <ul class="mb-0">
                    <li>Debe contener letras, números y símbolos (+ - * $ .)</li>
                    <li>Debe iniciar con una letra</li>
                    <li>Longitud recomendada: 10-12 caracteres</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function autogenerarContrasena() {
            // Llamar al servidor para generar contraseña
            fetch('?handler=GenerarContrasena', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.contrasena) {
                    document.getElementById('nuevaContrasena').value = data.contrasena;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al generar contraseña');
            });
        }
    </script>
}
