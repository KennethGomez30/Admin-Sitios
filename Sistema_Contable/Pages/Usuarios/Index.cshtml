@page
@model Sistema_Contable.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-users text-primary"></i> Administración de Usuarios
    </h1>
    <a asp-page="./Crear" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Nuevo Usuario
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.MensajeExito))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.MensajeExito
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @Model.MensajeError
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Usuarios</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre Completo</th>
                        <th>Correo</th>
                        <th>Roles</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Usuarios == null || !Model.Usuarios.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>No hay usuarios registrados</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var usuario in Model.Usuarios)
                        {
                            <tr>
                                <td>@usuario.Identificacion</td>
                                <td>@usuario.NombreCompleto</td>
                                <td>@usuario.Correo</td>
                                <td>
                                    @if (usuario.Roles.Any())
                                    {
                                        @foreach (var rol in usuario.Roles)
                                        {
                                            <span class="badge badge-primary">@rol.Nombre</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin roles</span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.Estado == "Activo")
                                    {
                                        <span class="badge badge-primary">@usuario.Estado</span>
                                    }
                                    else if (usuario.Estado == "Bloqueado")
                                    {
                                        <span class="badge badge-danger">@usuario.Estado</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@usuario.Estado</span>
                                    }
                                </td>
                                <td class="text-nowrap">
                                    <a asp-page="./Editar" asp-route-id="@usuario.Identificacion"
                                       class="btn btn-sm btn-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="./CambiarClave" asp-route-id="@usuario.Identificacion"
                                       class="btn btn-sm btn-warning" title="Cambio de clave">
                                        <i class="fas fa-key"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            onclick="confirmarEliminacion('@usuario.Identificacion', '@usuario.NombreCompleto')"
                                            title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPaginas > 1)
        {
            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual - 1)">Anterior</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPaginas; i++)
                    {
                        <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pagina="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Realmente desea eliminar el elemento seleccionado?</p>
                <p><strong>Usuario:</strong> <span id="nombreUsuario"></span></p>
            </div>
            <div class="modal-footer">
                <form method="post" id="formEliminar">
                    <input type="hidden" name="identificacionEliminar" id="identificacionEliminar" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="submit" asp-page-handler="Eliminar" class="btn btn-danger">Sí</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminacion(identificacion, nombre) {
            $('#identificacionEliminar').val(identificacion);
            $('#nombreUsuario').text(nombre);
            $('#modalEliminar').modal('show');
        }
    </script>
}
